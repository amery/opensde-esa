initramfs_install_pattern() {
	local pkg_name="$1"
	shift

	case "$pkg_name" in
	uclibc|gcc|binutils|libtool)
		# dynamic libraries only
		echo "-n -e 's/\.so\(\.[0-9]\+\)*$/&/p'"
		;;
	*)
		# default pattern
		echo "$@"
	esac
}

initramfs_install() {
	local pkg_name="$1" sandbox="$2" rootfs="$3"
	shift 3

	case "$pkg_name" in
	linux-header|autoconf|automake|gmp|mpc|flex)
		# skip
		;;
	*)
		# pass the ball to initramfs_install_pattern
		return 0
		;;
	esac
	return 1
}

